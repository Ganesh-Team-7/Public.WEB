@model Public.WEB.Models.Authentication.LoginRequest
@{
    ViewData["Title"] = "Login";
}
<h2>Login</h2>

<form asp-action="Login" method="post">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="mb-3">
        <label asp-for="EmailOrUsername" class="form-label"></label>
        <input asp-for="EmailOrUsername" class="form-control" />
        <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <a asp-controller="Account" asp-action="Register" class="btn btn-link">Don't have an account? Register</a>
</form>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
