@model Public.WEB.Models.User.UserResponse

<form id="deleteUserForm" method="post" action="/User/DeleteConfirmed">
    <input type="hidden" name="id" value="@Model.UserId" />
    

    <p>Are you sure you want to delete the user <strong>@Model.FirstName @Model.LastName</strong>?</p>

    <div class="mt-3 text-end">
        <button type="submit" class="btn btn-danger">Delete</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>
